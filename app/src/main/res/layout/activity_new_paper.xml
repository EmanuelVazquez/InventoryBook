<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".NewPaperActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nueva Hoja"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:padding="18dp"
        android:textSize="34sp"
        android:textStyle="bold"
        android:background="#046cfc" />
    <EditText
        android:id="@+id/inputTitulo"
        android:layout_width="290dp"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Titulo"
        android:inputType="textPersonName"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/inputEquipo"
        android:layout_width="331dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Equipo"
        android:inputType="textPersonName" />
    <LinearLayout
        android:layout_width="331dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/inputModelo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Modelo"
            android:inputType="textPersonName"
/>
        <EditText
            android:id="@+id/inputSerial"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:layout_weight="1"
            android:hint="N/S"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="331dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/inputFactura"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="Factura"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/inputFecha"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ems="10"
            android:hint="F.Compra"
            android:focusable="false"
            android:inputType="datetime" />
    </LinearLayout>

    <EditText
        android:id="@+id/inputClave"
        android:layout_width="331dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Clave"
        android:inputType="textPersonName" />

    <LinearLayout
        android:layout_width="331dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/inputUsuario"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Usuario"
            android:inputType="textPersonName" />
        <EditText
            android:id="@+id/inputDpto"
            android:layout_width="111dp"
            android:layout_height="match_parent"

            android:ems="10"
            android:hint="Dpto"
            android:layout_weight="1"
            android:inputType="textPersonName" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/optionsLayout"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/historyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_history_24" />

        <ImageButton
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_post_add_24" />

        <ImageButton
            android:id="@+id/editBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_edit_24" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/confirmNewPaperButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFF"
        android:visibility="visible"
        app:srcCompat="@drawable/comprobado_1"
        tools:ignore="SpeakableTextPresentCheck" />

</LinearLayout>